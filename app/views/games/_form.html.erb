
<%= simple_form_for @game do |f| %>
  <%= f.input :title %>
  <%= f.input :subtitle %>
  <%= f.input :description %>
  <%= f.input :platform %>
  <%= f.input :tag %>
  <%= f.input :score %>
  <%= f.input  :release_date, as: :date, html5: true %>
  <%= f.input :image, as: :file %>
  <%= f.button :submit %>
<% end %>